  <template name="Form::selectMonth" value="{!! Form::selectMonth('$NAME$' $DEFAULT$ $OPTION$) !!}$END$" description="Generate a Drop-down list with Months (name, default, attributes)" toReformat="false" toShortenFQNames="true">
