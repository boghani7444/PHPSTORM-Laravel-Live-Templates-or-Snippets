  <template name="Form::select" value="{!! Form::select('$NAME$', $LIST$ $DEFAULT$ $OPTION$) !!}$END$" description="Generate a Drop-down list (name, array of options, default, attributes)" toReformat="false" toShortenFQNames="true">
